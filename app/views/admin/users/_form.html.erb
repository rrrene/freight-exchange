<% semantic_form_for(resource, :url => resource.new_record? ? collection_url : resource_url) do |f| %>
  
  <% f.inputs :credentials do %>
    <%= f.input :login %>
    <%= f.input :email %>
  <% end %>
  
  <% f.inputs :change_password do %>
    <%= f.input :password %>
    <%= f.input :password_confirmation %>
  <% end %>
  
  <% f.inputs :posting do %>
    <%= f.input :posting_type, :collection => %w(Freight LoadingSpace), :include_blank => false %>
  <% end %>
  
  <% f.inputs :posting do %>
    <%= f.input :company %>
  <% end %>
  
  <% f.inputs :user_roles do %>
    <%= f.input :user_roles, :as => :check_boxes %>
  <% end %>

  <%= f.buttons %>
<% end %>