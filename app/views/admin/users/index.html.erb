<%= render_partial :index %>
<div class="box">
  <h3><%= t("#{controller_catalog}.index.header") %></h3>
  <p>
    <%= t("#{controller_catalog}.index.intro") %>
  </p>
  
  <% %w(login email).tap do |attributes| %>
  <table>
    <thead>
      <tr>
        <th>id</th>
        <% attributes.each do |attr| %>
          <th><%= attr.humanize %></th>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <% collection.each do |ar| %>
        <tr>
          <td><%= link_to ar.id, admin_user_path(ar) %></td>
          <% attributes.each do |attr| %>
          <td><%= link_to(ar[attr].is_a?(Hash) ? debug(ar[attr]) : ar[attr], admin_user_path(ar)) %></td>
          <% end %>
          <!--td><%= link_to "Edit", {:action => 'edit', :id => ar}, :class => 'edit' %></td-->
        </tr>
      <% end %>
    </tbody>
  </table>
  <% end %>
</div>
