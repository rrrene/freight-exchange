<div class="box">
  <h3>
    <%= t('stations.index.header') %>
  </h3>
  <p>
    <%= t('stations.index.intro') %>
  </p>
  
  <table>
    <thead>
      <tr>
        <th><%= Station.human_attribute_name(:name) %></th>
        <th><%= Station.human_attribute_name(:numeric_id) %></th>
      </tr>
    </thead>
    <tbody>
      <% @stations.each do |ar| %>
        <tr>
          <td><%= ar[:name] %></td>
          <td><%= ar[:numeric_id] %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>