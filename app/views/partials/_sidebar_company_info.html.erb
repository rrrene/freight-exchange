<% content_for(:sidebar) do %>
  <div class="box">
    <h3>
      <%= t "common.sidebar.company_information.header" %>
      <%= link_btn t("common.sidebar.company_information.show"), company_path(company), :class => 'show', :icon => :show %>
    </h3>

    <table>
      <thead>
        <tr>
          <th colspan="2"><b><%= company.name %></b></th>
        </tr>
      </thead>
      <% %w(address address2 zip city country phone fax email website).each do |attr| %>
        <% if company[attr].full? %>
          <tr>
            <th><%= Company.human_attribute_name(attr) %></th>
            <td><%= auto_link company[attr] %></td>
          </tr>
        <% end %>
      <% end %>
    </table>
    
    <% if company == current_company %>
      <%= content_tag(:div, t("common.sidebar.company_information.please_edit_notice"), {:class => 'notice'}) if only_some_attributes_filled?(company) %>
    <% end %>
    
    <% if company == current_company %>
      <%= link_btn t("common.sidebar.company_information.edit"), edit_company_path(company), :class => 'edit', :icon => :edit %>
    <% end %>
  </div>
<% end %>