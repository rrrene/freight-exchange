<div class="header">
  <div class="container" id="header">
    <div class="span-24 last" id="first-header">
      <%#= link_to image_tag('home_logo.gif'), root_url %>
      
      <ul class="navigation navigation-left">
        <li><%= link_to t("admin.common.navi.home"), admin_root_path %></li>
        <li><%= link_to t("admin.common.navi.stations"), admin_stations_path %></li>
      </ul>
      <ul class="navigation navigation-right">
        <li><%= link_to t("admin.common.navi.app_configs"), admin_app_configs_path %></li>
        <li><%= link_to t("admin.common.navi.back_to_app"), root_path %></li>
      </ul>
    </div>

    <div class="container" id="second-header">
      <ul class="navigation navigation-left">
        <li><span>
          <b>[</b>ADMIN<b>]</b>
        </span></li>
      </ul>
      <ul class="navigation navigation-right">
        <% if current_user.full? %>
          <li><span>Welcome <%= current_user.login %>!</span></li>
          <li><%= link_to_unless_current("My Company", company_dashboard_path) %></li>
          <li><%= link_to_unless_current "Logout", logout_path %></li>
        <% else %>
          <li><%= link_to_unless_current "Login", login_path %></li>
          <li><%= link_to_unless_current "Register", register_path %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>