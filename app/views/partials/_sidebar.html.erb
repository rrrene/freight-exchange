<div id="sidebar" class="span-8 last">
  <p>
    <%= link_to t("common.create_new_posting"), "#", :class => 'create_new_posting' %>
  </p>
  <%= yield(:sidebar) %>
  <div id="my_profile">
    <div class="box">
      <h3>My Profile</h3>
        <% if current_user.full? %>
          Welcome <%= link_to_unless_current current_user.login, my_profile_url %>!</span><br>
          <%= link_to_unless_current "Logout", logout_url %>
        <% else %>
          <%= link_to_unless_current "Login", login_url %>
        <% end %>
    </div>
  </div>
</div>