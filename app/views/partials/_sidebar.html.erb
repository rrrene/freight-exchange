<div id="sidebar" class="span-7 last">
  <%= yield(:sidebar) %>
  <div id="navigation">
    <div class="box">
      <h3>Navigation</h3>
        <% %w(root users something).each do |c| %>
        <%= link_to_unless(controller?(c), c, c) %>
        <% end %>
    </div>
  </div>
  <div id="my_profile">
    <div class="box">
      <h3>My Profile</h3>
        <% if current_user.full? %>
          <span>Welcome <%= current_user.login %>!</span>
          <%= link_to_unless_current "My Profile", my_profile_url %>
          <%= link_to_unless_current "Logout", logout_url %>
        <% else %>
          <%= link_to_unless_current "Login", login_url %>
        <% end %>
    </div>
  </div>
</div>