<div class="header">
  <div class="container" id="header">
    <div class="span-24 last" id="first-header">
      <%= link_to image_tag('logo.png', :onmouseover => 'this.src="/images/logo_hover.png";', :onmouseout => 'this.src="/images/logo.png";'), root_url, :id => 'logo'  %>
      <!--h2 style="float: left; font-weight: bolder;"><%= link_to "FreightExchange", root_url, :style => "text-decoration: none; color: #666;" %></h2-->

      <div class="navigation-right">
        <div class="navibox">
          <ul class="navigation">
            <% if current_user.full? %>
              <li><%= link_to_unless_current(t("common.navi.dashboard"), company_dashboard_path) %></li>
              <li>
                <% if posting_freights? %>
                  <%= link_to_unless_current(t("common.navi.freights"), freights_path) %>
                <% else %>
                  <%= link_to_unless_current(t("common.navi.loading_spaces"), loading_spaces_path) %>
                <% end %>
              </li>
              <li>
                <%= link_to_unless_current(text_with_badge("common.navi.reviews", current_company.unapproved_reviews.count), reviews_path) %>
              </li>
              <li><%= link_to_unless_current(t("common.navi.people"), people_path) %></li>
              <li><%= link_to_unless_current(t("common.navi.my_company"), company_path(current_company)) %></li>
              <li class="last"><%= link_to_unless_current(t("common.navi.logout"), logout_path) %></li>
            <% else %>
              <li><%= link_to_unless_current(t("common.navi.login"), login_path) %></li>
              <li class="last"><%= link_to_unless_current(t("common.navi.register"), register_path) %></li>
            <% end %>
          </ul>
        </div>

        <%- if current_user.full? { |u| u.is?(:administrator) } -%>
              <ul class="navigation navigation-right">
                <li class="noborder">
                  <span class="green"><%= link_to(t("common.navi.backend"), admin_root_path, :class => 'backend') %></span>
                </li>
              </ul>
        <%- end -%>
        
        <%= clear_both %>
        
        <ul class="navigation navigation-lang navigation-right">
          <li><%= link_to_unless_current(t("common.navi.my_person", {:name => current_user.name}), person_path(current_person)) %></li>
         <li class="noborder"><span class="normal"><%= t("common.navi.select_locale") %></span></li>
         <li><%= link_to_unless(I18n.locale == :de, t("common.navi.locale_de"), {:locale => :de}) %></li>
         <li class="last"><%= link_to_unless(I18n.locale == :en, t("common.navi.locale_en"), {:locale => :en}) %></li>
        </ul>
      </div>
    </div>

    <div class="container" id="second-header">
      <ul class="navigation navigation-left">
        <!--
        <li><span>
          <b><%#= Station.count %></b> stations and <b><%#= User.count %></b> users and stuff...
        </span></li>
        -->
      </ul>
      <ul class="navigation navigation-right">

        <% if false && current_user.full? %>
          <li><span>Welcome <%= current_user.login %>!</span></li>
          <li>
            <div id="search_form">
            <%= form_tag search_url, :method => :get do %>
              <div class="input-wrapper"><%= text_field_tag :q, h(params[:q]) %><%= submit_tag t('search.common.button'), :name => nil %></div>
            <% end %>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>