<div class="box">
  <h3>
    <%= t('people.index.header') %>
    <%= link_btn t("people.common.new_link"), new_user_path, :icon => 'new' %>
  </h3>
  <p>
    <%= t('people.index.intro') %>
  </p>
  
  <table>
    <thead>
      <tr>
        <th><%= Person.human_attribute_name(:first_name) %></th>
        <th><%= Person.human_attribute_name(:last_name) %></th>
        <th class="options"></th>
      </tr>
    </thead>
    <tbody>
      <% @people.each do |ar| %>
        <tr>
          <td><%= ar[:first_name] %></td>
          <td><%= ar[:last_name] %></td>
          <td class="options">
            <%= link_btn t("people.common.edit_link"), edit_person_path(ar), :icon => 'edit' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>