<div class="box">
  <h3>
    <%= t("loading_spaces.index.header") %>
    <%= link_btn t("loading_spaces.common.new_link"), new_loading_space_path, :icon => 'new' %>
  </h3>
  <p>
    <%= t('loading_spaces.index.intro') %>
  </p>
  
<!--
  <ul class="action_list">
    <% collection.each do |posting| %>
      <li>
      <%= render :partial => 'search_result', :locals => {:result => posting} %>
      </li>
    <% end %>
  </ul>
-->
  
  <table>
    <thead>
      <tr>
        <th><%= t('loading_spaces.index.table.headers.date') %></th>
        <th><%= t('loading_spaces.index.table.headers.origin') %></th>
        <th><%= t('loading_spaces.index.table.headers.destination') %></th>
        <th class="options"><%= t('loading_spaces.index.table.headers.options') %></th>
      </tr>
    </thead>
    <tbody>
      <% collection.each do |ar| %>
        <tr>
          <td><%= link_to ar.origin_site_info.date, ar %></td>
          <td><%= ar.origin_site_info.name %></td>
          <td><%= ar.destination_site_info.name %></td>
          <td class="options">
            <%= link_btn t('loading_spaces.index.table.options.template'), new_resource_url(:parent_id => ar.id), :icon => :reply %>
            <%= link_btn t('loading_spaces.index.table.options.edit'), {:action => 'edit', :id => ar}, :icon => 'edit' %> 
            <%= link_btn t('freights.index.table.options.delete'), ar, :method => :delete, :confirm => t('common.confirm'), :class => 'destroy' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>