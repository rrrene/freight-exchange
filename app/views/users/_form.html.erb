<% semantic_form_for(@user) do |f| %>
  <% f.inputs :name => 'Credentials' do %>
    <%= f.input :login %>
    <%= f.input :email %>
  <% end %>
  <% f.inputs :name => 'Change password' do %>
    <%= f.input :password %>
    <%= f.input :password_confirmation %>
  <% end %>
  <%= f.buttons %>
<% end %>