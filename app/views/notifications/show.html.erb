<div class="box">
  <h3>
    <%= t('notifications.show.header') %>
  </h3>
  <p>
    <%= t('notifications.show.intro') %>
  </p>
  <% if collection = @notification_items %>
    <table>
      <thead>
        <tr>
          <th><%= Station.human_attribute_name(:name) %></th>
          <th><%= Station.human_attribute_name(:numeric_id) %></th>
        </tr>
      </thead>
      <tbody>
        <% collection.each do |ar| %>
          <tr>
            <td><%= link_to ar.item.pretty_id, ar.item %></td>
            <td><%= ar[:item_id] %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <%= t("notifications.show.no_notifications") %>
  <% end %>
</div>